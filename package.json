{
  "name": "phaser-ts",
  "version": "1.0.0",
  "description": "",
  "main": "app.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",

    "build": "cpx src/**/* build/ && tsc && rollup -c",

    "watch": "npm run watch-copy & npm run watch-tsc & npm run watch-rollup & npm run livereload & npm run serve",
    "watch-copy": "cpx src/**/* build/ -w -c 'bash scripts/inject-livereload.sh'",
    "watch-tsc": "tsc -w ",
    "watch-rollup": "rollup -c -w",

    "serve": "http-server build/ -gs",
    "livereload": "livereload build/",

    "postinstall": "typings install && npm run build"
  },
