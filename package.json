  "license": "GPL-3.0",
  "dependencies": {
    "lodash": "^4.16.2"
  },
  "devDependencies": {
    "cpx": "^1.5.0",
    "livereload": "^0.5.0",
    "phaser": "^2.6.2",
    "rollup": "^0.36.1",
    "rollup-plugin-commonjs": "^5.0.4",
    "rollup-plugin-inject": "^2.0.0",
    "rollup-plugin-node-resolve": "^2.0.0",
    "rollup-watch": "^2.5.0",
    "typescript": "^2.0.3",
    "typings": "^1.4.0"
  }
}
